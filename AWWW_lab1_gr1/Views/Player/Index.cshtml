@model AWWW_lab1_gr1.Models.Player

<h1>@ViewBag.Title</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <td>Imie</td>
            <td>Nazwisko</td>
            <td>Numer indeksu</td>
            <td>Data urodzenia</td>
            <td>Kierunek</td>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            <th>@Model.Id</th>
            <td>@Model.FirstName</td>
            <td>@Model.LastName</td>
            <td>@Model.Country</td>
            <td>@Model.DateOfBirth.ToShortDateString()</td>
        }
    </tbody>
</table>